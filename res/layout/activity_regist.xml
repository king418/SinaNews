<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

        <ImageView
                android:id="@+id/img_regist_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/live_nav_back_1"
                android:layout_alignParentLeft="true"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:text="注册"
                />
    </RelativeLayout>

    <EditText
            android:layout_marginTop="40dp"
            android:id="@+id/et_regist_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机/邮箱/用户名"
            />

    <EditText
            android:id="@+id/et_regist_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="密码"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <EditText
                android:id="@+id/et_regist_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="验证码"
                />

        <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_regist_code"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:layout_height="40dp"
                />
    </LinearLayout>

    <Button
            android:id="@+id/btn_regist_next"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="下一步"
            />

</LinearLayout>