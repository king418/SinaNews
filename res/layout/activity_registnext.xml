<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
        <ImageView
                android:id="@+id/img_registnext_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/live_nav_back_1"

                />
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:gravity="center"
                android:text="完善资料"
                />

        <Button
                android:id="@+id/btn_rigistnext_complete"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="完成"

                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="#F5F5EB"
            >
        <ImageView
                android:id="@+id/img_registnext_upload"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/upload_image"
                />
    </LinearLayout>

    <EditText
            android:id="@+id/et_registnext_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="昵称"
            android:layout_marginTop="20dp"
            />
    <RelativeLayout
            android:id="@+id/contain_regist_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="7dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="性别"
                />

        <ImageView
                android:id="@+id/img_registnext_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                />
        <TextView
                android:id="@+id/tv_registnext_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img_registnext_sex"
                />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="手机号："
                />
        <EditText
                android:id="@+id/et_registnext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                />
    </LinearLayout>

</LinearLayout>